<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AlertDialogTitleText">
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="AlertDialogContentText">
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColorLink">@color/blue</item>
	</style>

	<style name="AlertDialogButton"  parent="Widget.AppCompat.Button">
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="AlertDialogPositiveButton" parent="AlertDialogButton">
		<item name="android:background">@drawable/button_primary</item>
	</style>

	<style name="AlertDialogNegativeButton" parent="AlertDialogButton">
		<item name="android:background">@drawable/button_secondary</item>
		<item name="android:textColor">@color/blue_02</item>
	</style>

	<style name="AlertDialogNeutralButton" parent="AlertDialogButton">
		<item name="android:background">@drawable/button_tertiary</item>
		<item name="android:textColor">@color/blue</item>
	</style>

	<style name="TextViewLabelStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">8dp</item>
	</style>

	<style name="TextViewValueStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">4dp</item>
	</style>

	<style name="TextHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>
</resources>
