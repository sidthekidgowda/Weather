<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name="viewBinder"
			type="com.png.interview.weather.ui.binder.SettingsFragmentViewBinder" />
	</data>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp">

		<TextView
			android:id="@+id/tv_units"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textSize="16sp"
			android:text="@string/units"
			app:layout_constraintTop_toTopOf="@id/rd_group"
			app:layout_constraintBottom_toBottomOf="@id/rd_group"
			app:layout_constraintStart_toStartOf="parent"/>

		<RadioGroup
			android:id="@+id/rd_group"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginStart="16dp"
			android:dividerPadding="8dp"
			android:showDividers="middle"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toEndOf="@id/tv_units"
			app:layout_constraintEnd_toEndOf="parent">

			<RadioButton
				android:id="@+id/imperial_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="@{viewBinder.imperialButtonSelected}"
				android:onClick="@{() -> viewBinder.onImperialButtonClicked()}"
				android:text="@string/imperial" />

			<RadioButton
				android:id="@+id/metric_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="@{viewBinder.metricButtonSelected}"
				android:onClick="@{() -> viewBinder.onMetricButtonClicked()}"
				android:text="@string/metric" />

		</RadioGroup>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>